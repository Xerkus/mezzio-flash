{
    "name": "mezzio/mezzio-flash",
    "description": "Flash messages for PSR-7 applications using mezzio-session",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "mezzio",
        "flash",
        "middleware",
        "psr-7",
        "psr-15",
        "session"
    ],
    "homepage": "https://mezzio.dev",
    "support": {
        "docs": "https://docs.mezzio.dev/mezzio-flash/",
        "issues": "https://github.com/mezzio/mezzio-flash/issues",
        "source": "https://github.com/mezzio/mezzio-flash",
        "rss": "https://github.com/mezzio/mezzio-flash/releases.atom",
        "chat": "https://laminas.dev/chat",
        "forum": "https://discourse.laminas.dev"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laminas": {
            "config-provider": "Mezzio\\Flash\\ConfigProvider"
        }
    },
    "require": {
        "php": "^7.1",
        "http-interop/http-middleware": "^0.4.1",
        "laminas/laminas-zendframework-bridge": "^1.0",
        "mezzio/mezzio-session": "^0.1"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "~1.0.0",
        "phpunit/phpunit": "^6.0.9"
    },
    "autoload": {
        "psr-4": {
            "Mezzio\\Flash\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MezzioTest\\Flash\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "upload-coverage": "coveralls -v"
    },
    "replace": {
        "zendframework/zend-expressive-flash": "self.version"
    }
}
